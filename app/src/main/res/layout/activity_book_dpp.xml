<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minilib.DPPBookActivity">


    <LinearLayout
        android:id="@+id/book_dpp_metadata"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/book_dpp_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1" />


        <LinearLayout
            android:id="@+id/book_dpp_metadata_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_dpp_author"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/book_dpp_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/book_dpp_isbn"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/book_dpp_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/book_dpp_atc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/button_for_book_request" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>